
<% if logged_in? %>

<h1>タスク一覧</h1>

<ul>

<% @tasks.each do |task| %>

<li><%= link_to task.status, task %>：<%= task.content %></li>

<% end %>

</ul>

<%= link_to '新規作成ページへ', new_task_path %>

<% else %>

<div class="center">
  <div class="text-center">
    <%= link_to 'Sing up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>

<% end %>


